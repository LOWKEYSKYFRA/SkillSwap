{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",              // ✅ Changed from "node" to "bundler"
    "customConditions": ["react-native"],       // ✅ Add this line for Expo Router v2+
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["expo-router"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
